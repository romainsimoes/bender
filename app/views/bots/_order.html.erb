<div class="col-md-6 card-pattern ">
      <h6>Your orders</h6>
      <div class="orders">
        <% @orders.each do |order| %>
        <div class="order-card">
          <div class="flex-item">
            <p><%= order.product %></p>
          </div>
          <div class="flex-item">
            <p><%= order.address %></p>
          </div>
          <div class="flex-item">
            <p><%=order.created_at.strftime("%T") %></p>
          </div>
          <div class="flex-item">
            <p><%= link_to order.status, edit_bot_order_path(@bot, order) %></p>
          </div>
        </div>
      <% end %>
      </div>
 </div>

