
<div class="container-bot">
<div class="container">
 <h3> Your Chatbots</h3>
  <div class="row">

    <div class="col-md-4 col-sm-6">
      <div class="card">
        <%= link_to new_bot_path do %>
        <div class="card-description ">
        <h5>Add a bot</h5>
        </div>
        <h4> + </h4>
        <% end %>

      </div>

    </div>


     <% @bots.each do |bot| %>

    <div class="col-xs-12 col-sm-4">

      <div class="card" >

          <%= image_tag "robot.png" %>
          <div class="card-category"><%= link_to bot_path(bot), method: "delete", data: { confirm: 'Are you sure?' } do %>
           <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
           <% end %></div>

           <div class="card-description">

            <h2><%= bot.name.capitalize %></h2>

            <p><input class="toggle-one" checked type="checkbox"> <br><br>

             <%= link_to edit_bot_path(bot) do %>
             <p>Edit</p>
              <% end %>
             <p>|</p>

             <%= link_to bot_histories_path(bot)  do %>
              <p>Analytics<p>
             <% end %>

            </div>

        <%= link_to edit_bot_path(bot), class: 'card-link' do %>

        <% end %>
      </div>
    </div>



    <% end %>
  </div>
</div>
</div>






<% content_for :js do %>
<script>
  $(function() {
    $('.toggle-one').bootstrapToggle();
  })
</script>
<% end %>








