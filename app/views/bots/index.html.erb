<p id="notice"><%= notice %></p>

<h1>Bots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Token</th>
      <th>Enable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bots.each do |bot| %>
      <tr>
      <div class="grey-card">
        <td><%= bot.name %></td>
        <td><%= bot.token %></td>
        <td><%= bot.enable %></td>
        <td><%= link_to 'Show', bot %></td>
        <td><%= link_to 'Edit', edit_bot_path(bot) %></td>
        <td><%= link_to 'Destroy', bot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
        <%= link_to 'Edit Your Bots', edit_bot_path(bot), class:" button button-red"  %>
        <%= link_to 'See Analytics', analytic_bot_path(bot), class:" button button-green"  %>




      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
<%= link_to 'Add a bot', new_bot_path, class:"button button-blue button-square"  %>
</center>





